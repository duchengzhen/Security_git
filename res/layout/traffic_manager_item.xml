<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/item_background_selector">

    <ImageView
        android:id="@+id/iv_traffic_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/image_desc"
        android:scaleType="fitXY"
        android:src="@drawable/app"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_traffic_icon"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_traffic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textColor="#ff000000"
            android:textSize="18sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_traffic_transmitted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/upload"
            android:drawablePadding="3dp"
            android:text="@string/traffic"
            />

        <TextView
            android:id="@+id/tv_traffic_received"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/download"
            android:drawablePadding="3dp"
            android:text="@string/traffic"
            />
    </LinearLayout>

</RelativeLayout>
