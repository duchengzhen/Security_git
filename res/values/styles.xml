<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 自定义对话框 -->
    <style name="MyDialog" parent="android:Theme.Holo.Light.Dialog.NoActionBar">
        <item name="android:windowBackground">@color/dialog_title_background</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="SetupGuideUnderline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#FFFEBD22</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="SetupGuideTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SetupGuideContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SetupGuideItem"></style>

    <style name="MyTitleBar" parent="@android:style/Theme">
        <item name="android:windowTitleSize">40dp</item>
        <item name="android:windowTitleBackgroundStyle">@drawable/title_background</item>
    </style>

    <style name="NoTitleDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="NoTitleBar" parent="android:Theme.Holo.Light.NoActionBar">

    </style>

    <style name="iv_titlebar_style">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">@dimen/main_titlebar_height</item>
        <item name="android:layout_height">@dimen/main_titlebar_height</item>
        <item name="android:background">@drawable/iv_titlebar_selector</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="nav_split_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#ff2A2A2A</item>
    </style>

    <style name="nav_item" parent="nav_item_text">
        <item name="android:clickable">true</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/bg_nav_item</item>
    </style>

    <style name="nav_item_text">
        <item name="android:clickable">false</item>
        <item name="android:text">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="iv_nav_item_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="gv_seperate_line">
        <item name="android:background">@color/main_seperate_line</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dip</item>
        <item name="android:layout_marginTop">14.0dip</item>
        <item name="android:layout_marginBottom">14.0dip</item>
    </style>

    <style name="dialog_titlebar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="custom_titlebar">
        <item name="android:background">@color/bg_custom_titlebar</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">14.0sp</item>
    </style>

    <style name="TextAppearance.Blue" parent="@style/TextAppearance">
        <item name="android:textColor">@color/textcolor_blue</item>
    </style>

    <style name="TextAppearance.Brown" parent="@style/TextAppearance">
        <item name="android:textColor">@color/textcolor_brown</item>
    </style>

    <style name="TextAppearance.Green" parent="@style/TextAppearance">
        <item name="android:textColor">@color/textcolor_green</item>
    </style>

    <style name="TextAppearance.Red" parent="@style/TextAppearance">
        <item name="android:textColor">@color/textcolor_red</item>
    </style>

    <style name="TextAppearance.Large" parent="@style/TextAppearance">
        <item name="android:textSize">20.0sp</item>
    </style>

    <style name="TextAppearance.Large.Inverse" parent="@style/TextAppearance.Large">
        <item name="android:textColor">@color/textcolor_white</item>
    </style>

    <style name="TextAppearance.Large.Green" parent="@style/TextAppearance.Large">
        <item name="android:textColor">@color/textcolor_green</item>
    </style>

    <style name="TextAppearance.Medium" parent="@style/TextAppearance">
        <item name="android:textSize">16.0sp</item>
    </style>

    <style name="TextAppearance.Medium.Inverse" parent="@style/TextAppearance.Medium">
        <item name="android:textColor">@color/textcolor_white</item>
    </style>

    <style name="TextAppearance.Small" parent="@style/TextAppearance">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="TextAppearance.Small.Blue" parent="@style/TextAppearance.Small">
        <item name="android:textColor">@color/textcolor_blue</item>
    </style>

    <style name="TextAppearance.Small.Brown" parent="@style/TextAppearance.Small">
        <item name="android:textColor">@color/textcolor_brown</item>
    </style>

    <style name="TextAppearance.Separator" parent="@style/TextAppearance">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="TextView">
        <item name="android:textAppearance">@style/TextAppearance</item>
    </style>

    <style name="TextView.Shadowed" parent="@style/TextView">
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="TextView.Shadowed.Inverse" parent="@style/TextView.Shadowed">
        <item name="android:shadowColor">#ff000000</item>
    </style>

    <style name="TextView.ListSeparator" parent="@style/TextView">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff737373</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/separator</item>
        <item name="android:paddingLeft">5.0sp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">30.0dip</item>
    </style>

    <style name="TextAppearance.Widget" parent="@style/TextAppearance"/>

    <style name="TextAppearance.Widget.Button.Green" parent="@style/TextAppearance.Widget.Button">
        <item name="android:textColor">@color/textcolor_widget_green</item>
    </style>

    <style name="TextAppearance.Widget.Button" parent="@style/TextAppearance.Widget">
        <item name="android:textColor">@color/textcolor_widget_default</item>
    </style>

    <style name="CheckedTextView">
        <item name="android:checkMark">@drawable/check_correct_rect</item>
    </style>

    <style name="CompoundButton.CheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/check_correct_rect</item>
    </style>

    <style name="DialogWindowTitle">
        <item name="android:textAppearance">@style/TextAppearance.Medium.Inverse</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:shadowColor">#33000000</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="AlertDialog">
        <item name="fullDark">@drawable/dialog_bg_nt</item>
        <item name="topDark">@drawable/dialog_bg_top</item>
        <item name="centerDark">@drawable/dialog_bg_center</item>
        <item name="bottomDark">@drawable/dialog_bg_bottom</item>
        <item name="fullBright">@drawable/dialog_bg_nt</item>
        <item name="topBright">@drawable/dialog_bg_top</item>
        <item name="centerBright">@drawable/dialog_bg_center</item>
        <item name="bottomBright">@drawable/dialog_bg_bottom</item>
        <item name="bottomMedium">@drawable/dialog_bg_bottom</item>
        <item name="centerMedium">@drawable/dialog_bg_center</item>
    </style>

    <style name="AlertDialog.Red" parent="@style/AlertDialog">
        <item name="topDark">@drawable/dialog_bg_top_red</item>
        <item name="topBright">@drawable/dialog_bg_top_red</item>
    </style>

    <style name="AlertDialog.Orange" parent="@style/AlertDialog">
        <item name="topDark">@drawable/dialog_bg_top_orange</item>
        <item name="topBright">@drawable/dialog_bg_top_orange</item>
    </style>

    <style name="EditText" parent="@android:style/Widget.EditText">
        <item name="android:textAppearance">@style/TextAppearance</item>
        <item name="android:background">@drawable/editbox</item>
        <item name="android:maxHeight">36.0dip</item>
        <item name="android:minHeight">36.0dip</item>
    </style>

    <style name="CheckMark"/>

    <style name="CheckMark.Switch" parent="@style/CheckMark">
        <item name="android:button">@drawable/btn_switch</item>
        <item name="android:minWidth">66.0dip</item>
        <item name="android:minHeight">34.0dip</item>
    </style>

    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:textAppearance">@style/TextAppearance.Widget.Button</item>
        <item name="android:textColor">@null</item>
        <item name="android:background">@drawable/bg_light_normal_button_selector</item>
        <item name="android:paddingLeft">15.0dip</item>
        <item name="android:paddingRight">15.0dip</item>
        <item name="android:minHeight">36.0dip</item>
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="Button.Header" parent="@style/Button">
        <item name="android:textAppearance">@style/TextAppearance</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@drawable/btn_header</item>
        <item name="android:maxHeight">32.0dip</item>
        <item name="android:minHeight">32.0dip</item>
        <item name="android:shadowColor">#ff000000</item>
    </style>

    <style name="Button.Deepin" parent="@style/Button">
        <item name="android:textAppearance">@style/TextAppearance.Widget.Button.Green</item>
        <item name="android:background">@drawable/bg_deepin_normal_button_selector</item>
    </style>

    <style name="ImageButton" parent="@style/Button">
        <item name="android:background">@drawable/btn_normal</item>
    </style>

    <style name="ProgressBar" parent="@android:style/Widget.ProgressBar">
        <item name="android:maxWidth">24.0dip</item>
        <item name="android:maxHeight">24.0dip</item>
        <item name="android:indeterminateDrawable">@drawable/spinner</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:minWidth">24.0dip</item>
        <item name="android:minHeight">24.0dip</item>
    </style>

    <style name="ListView" parent="@android:style/Widget.ListView">
        <item name="android:listSelector">@drawable/list_selector_background</item>
        <item name="android:divider">@drawable/list_divider</item>
    </style>

    <style name="Preference">
        <item name="android:layout">@layout/widget_preference</item>
    </style>

    <style name="Preference.PreferenceScreen" parent="@style/Preference"/>

    <style name="Preference.CheckBoxPreference" parent="@style/Preference">
        <item name="android:widgetLayout">@layout/widget_preference_widget_checkbox</item>
    </style>

    <style name="Preference.DialogPreference" parent="@style/Preference">
        <item name="android:widgetLayout">@layout/widget_preference_dialog</item>
        <item name="android:positiveButtonText">@android:string/ok</item>
        <item name="android:negativeButtonText">@android:string/cancel</item>
    </style>

    <style name="Preference.DialogPreference.YesNoPreference" parent="@style/Preference.DialogPreference">
        <item name="android:positiveButtonText">@android:string/yes</item>
        <item name="android:negativeButtonText">@android:string/no</item>
    </style>

    <style name="Preference.Information" parent="@style/Preference">
        <item name="android:enabled">false</item>
        <item name="android:layout">@layout/widget_preference_information</item>
        <item name="android:shouldDisableView">false</item>
    </style>

