<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
       android:shape="rectangle"
    ><!-- 指定要画的是一个矩形 -->
    <stroke
        android:width="1dp"
        android:color="#ff333333"
        />
    <!-- 相当于画笔,指定画笔的大小和颜色 -->
    <corners
        android:radius="12dp"
        />
    <!-- 指定我们这个矩形有圆角,半径为12dp -->
    <solid
        android:color="@color/text_solid_background"
        />
    <!-- 指定边框颜色 -->
    <padding
        android:bottom="2dp"
        android:left="8dp"
        android:right="8dp"
        android:top="2dp"
        />
    <!-- 内边距 -->
</shape>
